<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="orderMapper">

  <update id="addInfo" parameterType="order">
  	UPDATE order_t
  		<set>
  			id = #{tid},
  			orderstat = #{orderstat}
  			<if test="paymentmethod != null">paymentmethod = #{paymentmethod}</if>
  			<if test="approved_at != null">approved_at = #{approved_at}</if>
  		</set>
  	WHERE oid = #{oid}
  </update>
  
  <select id="selectOrder" parameterType="string" resultType="order">
  	SELECT * FROM order_t WHERE oid = #{id}
  </select>
  
  <select id="selectShop" resultType="shop">
  	SELECT * FROM shop_info
  </select>
</mapper>
